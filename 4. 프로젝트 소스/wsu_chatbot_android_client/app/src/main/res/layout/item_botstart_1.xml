<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10"
        app:layout_constraintHorizontal_weight="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="19dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/wsu"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bot_name"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#EDEDED"
                app:cardCornerRadius="3dp">


                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:background="@color/botback"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wsu4" />


                    <TextView
                        android:id="@+id/botStartMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:backgroundTint="#EDEDED"
                        android:padding="3dp"
                        android:text="안녕하세요! 우송대 챗봇 입니다.
                                      궁금한것들을 물어보세요!"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:padding="3dp"
                        android:text="[원하는 질문을 선택하세요]"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/holder2_botMsg" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnQnA1"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:drawableLeft="@drawable/size_note"
                            android:paddingLeft="15dp"
                            android:text="수시"
                            android:textSize="13sp"
                            app:backgroundTint="@color/botbutton" />

                        <Button
                            android:id="@+id/btnQnA2"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:drawableLeft="@drawable/size_test"
                            android:paddingLeft="15dp"
                            android:text="정시"
                            android:textSize="13sp"
                            app:backgroundTint="@color/botbutton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnQnA3"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:drawableLeft="@drawable/size_phonebook1"
                            android:paddingLeft="15dp"
                            android:paddingRight="0dp"
                            android:text="부서별 연락처"
                            android:textSize="12sp"
                            app:backgroundTint="@color/botbutton" />

                        <Button
                            android:id="@+id/btnQnA4"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:drawableLeft="@drawable/size_school1"
                            android:paddingLeft="15dp"
                            android:text="캠퍼스 맵"
                            android:textSize="13sp"
                            app:backgroundTint="@color/botbutton" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>